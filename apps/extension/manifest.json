{
    "manifest_version": 3,
    "name": "Simplify for India",
    "version": "1.0.0",
    "description": "Auto-apply to jobs on Indian portals",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "assets/content.js"
            ]
        }
    ]
}